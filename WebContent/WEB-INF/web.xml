<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>Archetype Created Web Application</display-name>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
	          classpath:spring/base.xml
	   </param-value>
  </context-param>
  <listener>
    <listener-class>
		     org.springframework.web.context.ContextLoaderListener
		</listener-class>
  </listener>
  <servlet>
    <servlet-name>crust</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>crust</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>crust</servlet-name>
    <url-pattern>*.no</url-pattern>
  </servlet-mapping>
  <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.wjtcy.gglm.manager.flter.CharacterEncodFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
  <filter>
    <filter-name>SecurityManageFilter</filter-name>
    <filter-class>com.wjtcy.gglm.manager.flter.SecurityManageFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SecurityManageFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  
  <welcome-file-list>
  	<welcome-file>login.no</welcome-file>
  </welcome-file-list>
</web-app>